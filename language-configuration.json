{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "wordPattern": "[A-Za-z0-9][A-Za-z0-9.+-]*(?=::)|[A-Z][A-Z0-9.+-]*[a-z][A-Za-z0-9.+-]*|\\d+\\.\\d\\w*|\\w+",
    "indentationRules": {
        "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
        "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\}\\]].*$",
        "indentNextLinePattern": "^((?!\\/\\/).)*=>$"
    }
}
