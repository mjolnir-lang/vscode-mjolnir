{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "wordPattern": "(\\d+\\.\\d\\w*)|([A-Za-z0-9_][A-Za-z0-9_.+-]+(?=::))|([A-Za-z0-9_][A-Za-z0-9_-]+[A-Za-z0-9_])|(\\w+)",
    "indentationRules": {
        "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
        "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\}\\]].*$",
        "indentNextLinePattern": "^((?!\\/\\/).)*=>[^\"'`]*$"
    }
}
