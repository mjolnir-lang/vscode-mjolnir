{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Mjolnir ASM MSP430",
    "comment": "Mjolnir MSP430 assembler language syntax",
    "scopeName": "source.mj.asm.msp430",
    "patterns": [
        { "include": "#opcode" },
        { "include": "#register" },
        { "include": "source.mj.asm" }
    ],
    "repository": {
        "opcode": {
            "match": "^\\s*(mov)\\b",
            "name": "keyword.mnemonic.mj.asm.msp430"
        },
        "register": {
            "match": "\\b(AF?|BC?|C|DE?|E|HL?|I[XY]?|L|PC|R|SP)\\b",
            "name": "variable.language.mj.asm.msp430"
        }
    }
}
